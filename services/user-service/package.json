{
  "name": "user-service",
  "version": "1.0.0",
  "description": "User Service - User management, authentication, and authorization",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "type-check": "tsc --noEmit",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "db:create": "wrangler d1 create user-db",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply user-db",
    "db:migrate:local": "wrangler d1 migrations apply user-db --local"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.2.0",
    "@kidkazz/domain-events": "workspace:*",
    "@kidkazz/types": "workspace:*",
    "@kidkazz/utils": "workspace:*",
    "@tsndr/cloudflare-worker-jwt": "^2.4.0",
    "bcryptjs": "^2.4.3",
    "drizzle-orm": "^0.36.4",
    "hono": "^4.0.0",
    "nanoid": "^5.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260116.0",
    "@types/bcryptjs": "^2.4.6",
    "drizzle-kit": "^0.29.1",
    "typescript": "^5.6.0",
    "wrangler": "^4.59.2"
  }
}
