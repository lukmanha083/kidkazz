{
  "name": "shipping-service",
  "version": "1.0.0",
  "description": "Shipping Service - Shipping rate calculation and order tracking with JET integration",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "type-check": "tsc --noEmit",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "db:create": "wrangler d1 create shipping-db",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply shipping-db",
    "db:migrate:local": "wrangler d1 migrations apply shipping-db --local"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.2.0",
    "@kidkazz/domain-events": "workspace:*",
    "@kidkazz/types": "workspace:*",
    "@kidkazz/utils": "workspace:*",
    "drizzle-orm": "^0.36.4",
    "hono": "^4.0.0",
    "nanoid": "^5.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260116.0",
    "drizzle-kit": "^0.29.1",
    "typescript": "^5.6.0",
    "wrangler": "^4.59.3"
  }
}
