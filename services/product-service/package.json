{
  "name": "product-service",
  "version": "1.0.0",
  "type": "module",
  "description": "Product Service - Product catalog, pricing, and availability",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "type-check": "tsc --noEmit",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "db:create": "wrangler d1 create product-db",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply product-db",
    "db:migrate:local": "wrangler d1 migrations apply product-db --local"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.2.0",
    "@kidkazz/ddd-core": "workspace:*",
    "@kidkazz/trpc": "workspace:*",
    "@trpc/client": "^11.8.0",
    "@trpc/server": "^11.8.0",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.0.0",
    "nanoid": "^5.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260116.0",
    "@types/better-sqlite3": "^7.6.13",
    "@vitest/coverage-v8": "^4.0.17",
    "better-sqlite3": "^12.6.2",
    "drizzle-kit": "^0.31.8",
    "typescript": "^5.6.0",
    "vitest": "^4.0.17",
    "wrangler": "^4.59.3"
  }
}
