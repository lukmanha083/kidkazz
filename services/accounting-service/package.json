{
  "name": "accounting-service",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run --dir test/unit",
    "test:integration": "vitest run --dir test/integration",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "test:e2e:sequential": "./scripts/run-e2e-sequential.sh",
    "test:e2e:full-year": "vitest run --config vitest.e2e-full-year.config.ts",
    "dev:remote": "wrangler dev --remote",
    "test:coverage": "vitest run --coverage",
    "lint": "biome lint ./src",
    "lint:fix": "biome lint --write ./src",
    "format": "biome format --write ./src",
    "check": "biome check ./src",
    "check:fix": "biome check --write ./src",
    "type-check": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply accounting-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply accounting-db --remote"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.6",
    "drizzle-orm": "^0.33.0",
    "hono": "^4.11.7",
    "nanoid": "^5.1.6",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@cloudflare/vitest-pool-workers": "^0.12.7",
    "@cloudflare/workers-types": "^4.20260128.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.2.0",
    "@vitest/coverage-v8": "2.1.9",
    "better-sqlite3": "^12.6.2",
    "drizzle-kit": "^0.24.2",
    "typescript": "^5.9.3",
    "vitest": "2.1.9",
    "wrangler": "^4.61.0"
  }
}
