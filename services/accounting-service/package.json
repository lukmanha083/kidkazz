{
  "name": "accounting-service",
  "version": "1.0.0",
  "description": "Accounting microservice with DDD and hexagonal architecture",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "type-check": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply accounting-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply accounting-db --remote",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "drizzle-orm": "^0.33.0",
    "hono": "^4.6.0",
    "nanoid": "^5.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251113.0",
    "drizzle-kit": "^0.31.7",
    "typescript": "^5.6.0",
    "wrangler": "^4.49.0"
  }
}
