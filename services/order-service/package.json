{
  "name": "order-service",
  "version": "1.0.0",
  "description": "Order Service - Order management and orchestration for retail and wholesale",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "type-check": "tsc --noEmit",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "db:create": "wrangler d1 create order-db",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply order-db",
    "db:migrate:local": "wrangler d1 migrations apply order-db --local"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.2.2",
    "@kidkazz/domain-events": "workspace:*",
    "@kidkazz/types": "workspace:*",
    "@kidkazz/utils": "workspace:*",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.7",
    "nanoid": "^5.1.6",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260128.0",
    "drizzle-kit": "^0.31.8",
    "typescript": "^5.9.3",
    "wrangler": "^4.61.1"
  }
}
