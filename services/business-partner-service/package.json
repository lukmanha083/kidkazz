{
  "name": "business-partner-service",
  "version": "1.0.0",
  "type": "module",
  "description": "Business Partner Service - Customer, Supplier, and Employee management",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "type-check": "tsc --noEmit",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply business-partner-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply business-partner-db --remote",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.2.2",
    "@kidkazz/ddd-core": "workspace:*",
    "@kidkazz/trpc": "workspace:*",
    "drizzle-orm": "^0.33.0",
    "hono": "^4.11.7",
    "nanoid": "^5.1.6",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260128.0",
    "@vitest/coverage-v8": "^2.1.9",
    "drizzle-kit": "^0.31.8",
    "typescript": "^5.9.3",
    "vitest": "^2.1.9",
    "wrangler": "^4.61.0"
  }
}
