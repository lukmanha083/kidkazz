{
  "name": "kidkazz-platform",
  "version": "1.0.0",
  "type": "module",
  "description": "Dual-Market E-Commerce Platform (Retail + Wholesale) on Cloudflare",
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel -r dev",
    "dev:gateway": "pnpm --filter api-gateway dev",
    "dev:services": "pnpm --filter \"./services/**\" dev",
    "build": "pnpm -r build",
    "deploy": "pnpm -r deploy",
    "type-check": "pnpm -r type-check",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "clean": "pnpm -r clean",
    "generate:service-graph": "npx tsx scripts/generate-service-graph.ts",
    "validate:service-graph": "npx tsx scripts/generate-service-graph.ts --validate"
  },
  "keywords": [
    "wholesale",
    "retail",
    "ecommerce",
    "cloudflare",
    "microservices",
    "hexagonal-architecture",
    "ddd",
    "tanstack",
    "hono"
  ],
  "devDependencies": {
    "@biomejs/biome": "^2.3.12",
    "@types/node": "^24.10.0",
    "@vitest/coverage-v8": "^4.0.18",
    "better-sqlite3": "^12.4.6",
    "drizzle-orm": "^0.44.7",
    "shadcn": "^3.6.2",
    "tsx": "^4.21.0",
    "typescript": "^5.6.0",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@10.26.2+sha512.0e308ff2005fc7410366f154f625f6631ab2b16b1d2e70238444dd6ae9d630a8482d92a451144debc492416896ed16f7b114a86ec68b8404b2443869e68ffda6",
  "engines": {
    "node": ">=20.0.0"
  },
  "pnpm": {
    "overrides": {
      "glob@<8": "^10.4.0",
      "inflight@<2": "npm:@zkochan/inflight@^1.0.0",
      "esbuild": "^0.24.2",
      "test-exclude": "^7.0.1"
    },
    "onlyBuiltDependencies": ["better-sqlite3", "esbuild", "sharp", "workerd"]
  }
}
